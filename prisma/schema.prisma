generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DATABASE_VERCEL_POSTGRES_URL")
}


//////////////////////////////
// USER MODELS (UUID)
//////////////////////////////

model User {
  id            String           @id @default(uuid()) @db.Uuid
  name          String?
  email         String?          @unique
  emailVerified DateTime?
  passwordHash  String?
  createdAt     DateTime         @default(now())
  preferences   UserPreference?
  workoutLogs   WorkoutLog[]
  accounts      Account[]
  sessions      Session[]
}

model UserPreference {
  id           String  @id @default(uuid()) @db.Uuid
  user         User    @relation(fields: [userId], references: [id])
  userId       String  @unique @db.Uuid
  difficulty   String?
  targetMuscle String?
  equipment    String?
}

//////////////////////////////
// WORKOUT MODELS
//////////////////////////////

model Workout {
  id              String             @id @default(uuid()) @db.Uuid
  name            String             @unique
  description     String?
  difficulty      String
  targetMuscle    String
  durationMinutes Int
  equipment       String?
  videoUrl        String?
  createdAt       DateTime           @default(now())

  workoutLogs     WorkoutLog[]
  exercises       WorkoutExercise[]
}

model Exercise {
  id           String    @id @db.Uuid            // DB already generates UUID
  name         String    @unique
  instructions String?
  equipment    String?
  muscleGroup  String?
  createdAt    DateTime  @default(now())
  items        WorkoutExercise[]
}

model WorkoutExercise {
  id              String   @id @default(uuid()) @db.Uuid

  workout         Workout  @relation(fields: [workoutId], references: [id])
  workoutId       String   @db.Uuid

  exercise        Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId      String   @db.Uuid

  orderIndex      Int
  durationSeconds Int?
  reps            Int?
  notes           String?

  @@unique([workoutId, orderIndex])
}

//////////////////////////////
// WORKOUT LOG
//////////////////////////////

model WorkoutLog {
  id          String   @id @default(uuid()) @db.Uuid
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.Uuid

  workout     Workout  @relation(fields: [workoutId], references: [id])
  workoutId   String   @db.Uuid

  completedAt DateTime @default(now())
}

//////////////////////////////
// NEXTAUTH MODELS (UUID)
//////////////////////////////

model Account {
  id                 String  @id @default(uuid()) @db.Uuid
  userId             String  @db.Uuid
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? 
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
